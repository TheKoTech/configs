set hidden
set icons

#map d
map <delete> trash
map <c-delete> delete

map + push :mkdir<space>
cmd mkdir $mkdir $*

map C push :chown<space>
cmd chown ${{
  if [ -z "$fs" ]; then
    sudo chown $1:$1 $f
  else
    IFS="$(printf '\n\t')"; sudo chown "$1":"$1" $fs
  fi
}}

cmd code ${{
  if [ -z "$fs" ]; then
    code "$f"
  else
    selected_files=""
    for file in $fs; do
      selected_files="$selected_files \"$file\""
    done
    eval code $selected_files
  fi
}}

# Open files

map oc :code
map oz $zed $f

